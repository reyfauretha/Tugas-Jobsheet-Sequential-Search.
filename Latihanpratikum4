package LatihanPratikum;
import java.util.Scanner;
public class LatihanPratikum4 {

    public static void main(String[] args) {
        Scanner masuk = new Scanner(System.in);
        String mencari;
        System.out.print("Masukkan sebuah kata atau kalimat : ");
        mencari = masuk.nextLine();
        
        int x = 0;
        for(int i = 0; i < mencari.length(); i++){
            if (mencari.charAt(i)== 'x' ){
                x++;
            }
        }
          System.out.println("Jumlah huruf x ada = " + x);
            }
        }
    
